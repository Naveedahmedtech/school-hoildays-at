<div class="dashboard-container">
  <div class="dashboard">
    <form id="translation-form" class="dashboard-form">
      <h2>Update Home Content</h2>

      <!-- Language Selection Filter -->
      <div class="form-group">
        <label for="language-select">Select Language:</label>
        <select id="language-select" class="language-filter">
          <option value="en">English</option>
          <option value="fr">French</option>
        </select>
      </div>

      <!-- Section for Home Title -->
      <div class="form-group lang-field lang-en">
        <label for="home-title-en">Home Title (EN):</label>
        <input
          type="text"
          id="home-title-en"
          name="school_holidays[en]"
          placeholder="Enter Home Title in English"
          value="<%= translations.en.school_holidays || '' %>"
          required
        />
      </div>

      <div class="form-group lang-field lang-fr">
        <label for="home-title-fr">Home Title (FR):</label>
        <input
          type="text"
          id="home-title-fr"
          name="school_holidays[fr]"
          placeholder="Enter Home Title in French"
          value="<%= translations.fr.school_holidays || '' %>"
          required
        />
      </div>

      <!-- Search placeholder for Home page -->
      <div class="form-group lang-field lang-en">
        <label for="search-placeholder-en">Search Placeholder (EN):</label>
        <input
          type="text"
          id="search-placeholder-en"
          name="search_placeholder[en]"
          placeholder="Enter Search Placeholder in English"
          value="<%= translations.en.search_placeholder || '' %>"
          required
        />
      </div>

      <div class="form-group lang-field lang-fr">
        <label for="search-placeholder-fr">Search Placeholder (FR):</label>
        <input
          type="text"
          id="search-placeholder-fr"
          name="search_placeholder[fr]"
          placeholder="Enter Search Placeholder in French"
          value="<%= translations.fr.search_placeholder || '' %>"
          required
        />
      </div>

      <!-- Regions -->
      <div class="form-group lang-field lang-en">
        <label for="regions-en">Navigation Link Text (EN):</label>
        <input
          type="text"
          id="regions-en"
          name="regions[en]"
          placeholder="Enter Regions in English"
          value="<%= translations.en.regions || '' %>"
          required
        />
      </div>

      <div class="form-group lang-field lang-fr">
        <label for="regions-fr">Navigation Link Text (FR):</label>
        <input
          type="text"
          id="regions-fr"
          name="regions[fr]"
          placeholder="Enter Regions in French"
          value="<%= translations.fr.regions || '' %>"
          required
        />
      </div>

      <!-- Academies -->
      <div class="form-group lang-field lang-en">
        <label for="academies-en">Navigation Link Text (EN):</label>
        <input
          type="text"
          id="academies-en"
          name="academies[en]"
          placeholder="Enter Academies in English"
          value="<%= translations.en.academies || '' %>"
          required
        />
      </div>

      <div class="form-group lang-field lang-fr">
        <label for="academies-fr">Navigation Link Text (FR):</label>
        <input
          type="text"
          id="academies-fr"
          name="academies[fr]"
          placeholder="Enter Academies in French"
          value="<%= translations.fr.academies || '' %>"
          required
        />
      </div>

      <!-- Section for Corsica and Overseas Territories Calendar -->
      <div class="form-group lang-field lang-en">
        <label for="corsica-calendar-en">Corsica Calendar (EN):</label>
        <input
          type="text"
          id="corsica-calendar-en"
          name="corsica_calendar[en]"
          placeholder="Enter Corsica Calendar in English"
          value="<%= translations.en.corsica_calendar || '' %>"
          required
        />
      </div>

      <div class="form-group lang-field lang-fr">
        <label for="corsica-calendar-fr">Corsica Calendar (FR):</label>
        <input
          type="text"
          id="corsica-calendar-fr"
          name="corsica_calendar[fr]"
          placeholder="Enter Corsica Calendar in French"
          value="<%= translations.fr.corsica_calendar || '' %>"
          required
        />
      </div>

      <!-- Section for List of Academies by Zone -->
      <div class="form-group lang-field lang-en">
        <label for="academies-zone-en">List of Academies by Zone (EN):</label>
        <input
          type="text"
          id="academies-zone-en"
          name="academies_by_zone[en]"
          placeholder="Enter List of Academies by Zone in English"
          value="<%= translations.en.academies_by_zone || '' %>"
          required
        />
      </div>

      <div class="form-group lang-field lang-fr">
        <label for="academies-zone-fr">List of Academies by Zone (FR):</label>
        <input
          type="text"
          id="academies-zone-fr"
          name="academies_by_zone[fr]"
          placeholder="Enter List of Academies by Zone in French"
          value="<%= translations.fr.academies_by_zone || '' %>"
          required
        />
      </div>

      <!-- Submit Button -->
      <button type="submit" class="btn-submit">Update Translations</button>
    </form>
  </div>
</div>
