<div class="dashboard-container">
    <div class="dashboard">
      <h2>Manage Users</h2>
  
      <!-- Section: Add User Button -->
      <div class="add-user-button-container">
        <button class="btn-add-user" onclick="addUserPage()">Add New User</button>
      </div>
  
      <!-- Section: No Users Available -->
      <div id="no-users-message" style="display: none;">
        <p>No users found. Start by adding a new user.</p>
      </div>
  
      <!-- Section: User Table -->
      <div id="users-table-container">
        <table class="users-table">
          <thead>
            <tr>
              <th>Email</th>
              <th>Role</th>
              <th>Permissions</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody id="users-table-body">
            <!-- User rows will be dynamically populated -->
          </tbody>
        </table>
      </div>
    </div>
  </div>


  <script src="/js/manage-users.js"></script>
  
  